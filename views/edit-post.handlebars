<section class="container">
  <article>
    <div class = " mt-3 d-flex justify-content-between align-items-center">
      <h1 class="edit-post">Edit Post</h1>
      <a href="/dashboard" class="dashboard"> &larr; Back to dashboard</a>
    </div>
    <form class="edit-post-form">
      <div class="mt-3">
        <div class="post-head d-flex flex-column">
          <input id="post-title" name="post-title" type="text" value="{{post.title}}" class="mt-4 form-control edit-title"/>
          <p class="post-info">Posted by you on {{format_date post.created_at}} | {{post.comments.length}} {{format_plural "comment" post.comments.length}}</p>
        </div>
        <div class="mb-3 pb-4 pt-4 d-flex justify-content-center edit-body">
          <textarea id="post-text" class="form-control edit-text" rows=4 name="post-body">{{post.post_text}}</textarea>
        </div>
      </div>
      <div class="d-flex justify-content-center">
        <button type="submit" class="mt-3 mx-3 save-post-btn btn btn-primary">Save post</button>
        <button type="button" class="mt-3 mx-3 delete-post-btn btn btn-primary">Delete post</button>
      </div>
    </form>
    <hr>
  </article>
  <div class="form-section d-flex row gx-0">
    <form class="form-wrapper comment-form">
      <div>
        <label for="comment-body" class="form-label form-label-override">Write your own comment!</label>
        <textarea id="comment-text" class = "form-control" rows=4 name="comment-body"></textarea>
      </div>

      <div>
        <button class = "btn btn-secondary" type="submit">Add comment</button>
      </div>
    </form>
  </div>

  {{> comments post.comments }}


<script src="/javascript/edit-post.js"></script>
<script src="/javascript/delete-post.js"></script>
<script src="/javascript/comment.js"></script>
</section>