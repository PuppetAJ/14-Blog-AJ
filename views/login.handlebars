<section class="form-container container">
  <form class="login-form">
    <div class="form-wrapper">
      <h1 class="form-header">Log In</h1>
      <div class="mb-3">
        <label for="username-login" class="form-label">Username:</label>
        <input type="text" id="email-login" class="form-control"/>
      </div>
      <div class="mb-3">
        <label for="password-login" class="form-label">Password:</label>
        <input type="password" id="password-login" class="form-control" />
      </div>
      <div>
        <button type="submit" class="btn btn-primary">Login</button>
      </div>
    </div>
  </form>

  <div class = "form-divider d-flex justify-content-center">
    <h1 class="form-divider-header">OR..</h1>
  </div>

  <form class="signup-form">
    <div class="form-wrapper">
      <h1 class="form-header">Sign Up</h1>
      <div class="mb-3">
        <label for="username-signup" class="form-label">Username:</label>
        <input type="text" id="username-signup" class="form-control" />
      </div>
      <div class="mb-3">
        <label for="password-signup" class="form-label">Password:</label>
        <input type="password" id="password-signup" class="form-control" />
      </div>
      <div>
        <button type="submit" class="btn btn-primary">Sign Up</button>
      </div>
    </div>
  </form>
  <script src="/javascript/login.js"></script>
</section>